source "https://rubygems.org"

ruby "2.1.5"

gem "middleman", "~> 3.3.6"

# ----- template processors -----
gem "middleman-slim" # slim
gem "RedCloth"       # textile

# ----- utility extensions -----
gem "dotenv"             # store user/pwd in .env
gem "activesupport"      # date methods (1.week...), .blank?, .present? ...
gem "google-api-client"  # wrapper for google calendar

# ----- development utilities -----
gem "whenever"       # cron scheduling
gem "colored"        # colored terminal output
gem "rake"           # command processing
gem "pry"            # debugger / IRB console
